<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorTextBlack</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="backgroundColor">@color/colorGreyFAFAFA</item>
        <item name="gradientBorder">@drawable/gradient_border</item>
        <item name="gradientBorderNewsCal">@drawable/gradient_border_news_cal</item>
        <item name="textColor">@color/colorTextBlack</item>
        <item name="headerTextColor">@color/colorBlack</item>
        <item name="toolbarColor">@color/colorGreyFAFAFA</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="btmTitleTextColor">@color/gradient</item>
    </style>

    <!--  Dark theme  -->
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/colorTextBlack</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="backgroundColor">@color/colorBlack</item>
        <item name="gradientBorder">@drawable/gradient_border</item>
        <item name="gradientBorderNewsCal">@drawable/gradient_border_news_cal</item>
        <item name="textColor">@color/colorGreyFAFAFA</item>
        <item name="headerTextColor">@color/colorBlack</item>
        <item name="toolbarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="btmTitleTextColor">@color/gradient</item>
    </style>

    <!--  In theory - it styles the BottomNavigationBar  -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!--  Style for the text displayed in top toolbar  -->
    <style name="toolbarText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/headerTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Default style for text  -->
    <style name="bodyText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>


</resources>
